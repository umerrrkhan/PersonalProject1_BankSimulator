from math import *
from tkinter import *
from tkinter.messagebox import showinfo
import tkinter.font as font

root =  Tk()

AddBank = Button(root,
                 text = 'Add a New Account',
                 background = 'gray',
                 width = 15)
DeleteBank = Button(root,
                    text  = 'Delete an existing Account',
                    background = 'gray',
                    width = 18)
AddInterest = Button (root,
                      text = 'Add Monthly Interest',
                      background = 'gray',
                      width = 12)
CurrentBalance = Button(root,
                        background = 'gray',
                        text = 'Show Current Balance',
                        width = 16)

AddBank.grid(row = 0, column = 0)
DeleteBank.grid(row = 0, column = 1)
AddInterest.grid(row = 0, column = 2)
CurrentBalance.grid(row = 0, column = 3)

'''MessageBox = Text(root,
