amountEntry = Entry(root,
                     width = 10)

deposit = Button(root,
               text = 'Deposit',
               width = 9)

withdraw = Button(root,
               text = 'Withdraw',
               width = 10)

amountEntry.grid(row = 5, column = 2)
deposit.grid(row = 6, column = 1)
withdraw.grid(row = 6, column = 2)
